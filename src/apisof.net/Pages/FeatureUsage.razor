@page "/feature-usage"

<div class="mt-3 container-fluid">
    <div class="mx-auto col-md-5">
        <h3>
            Feature Usage
        </h3>
        <table class="table">
            @foreach (var (usageSource, usages) in GetUsages())
            {
                <tr>
                    <th>
                        @usageSource.Name
                    </th>
                    <td>
                        @foreach (var usage in usages)
                        {
                            var value = usage.Percentage * 100;
                            var title = $"Usage on {usageSource.Name} is {usage.Percentage:P5} (as of {usageSource.Date})";

                            <div class="row align-items-center" title="@title">
                                <div class="col col-md-5 col-xl-3">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: @value%;" aria-valuenow="@value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="col" style="max-width: 5rem;">
                                    @usage.Percentage.ToString("P1")
                                </div>
                                <div class="col text-muted small">
                                    <span title="@usage.Feature.Description">@usage.Feature.Name</span>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="mx-auto col-md-5">
        <h3>
            Sources
        </h3>
        @foreach (var usageSource in CatalogService.UsageData.UsageSources)
        {
            <div class="row mt-5 justify-content-between">
                <div class="col">
                    <h4>@usageSource.Name</h4>
                </div>
                <div class="col d-flex justify-content-center">
                    <dl>
                        <dt>Last Indexed</dt>
                        <dd>@usageSource.Date.Humanize()</dd>
                    </dl>
                </div>
                <div class="col text-right">
                    <dl>
                        <dt># Units</dt>
                        <dd>@usageSource.ReferenceUnitCount.ToString("N0")</dd>
                    </dl>
                </div>
            </div>
            <div class="progress">
                @{
                    var colors = new[]
                    {
                        "bg-success",
                        "bg-warning",
                        "bg-danger"
                    };
                }
                @foreach (var (version, count) in usageSource.VersionDistribution.OrderBy(t => t.Version))
                {
                    var distanceFromCurrent = int.Clamp(usageSource.SupportedCollectionVersion - version, 0, colors.Length - 1);
                    var percentage = ((float)count / usageSource.ReferenceUnitCount).ToString("P0");
                    var color = colors[distanceFromCurrent];
                    var title = distanceFromCurrent == 0
                        ? $"{count.ToMetric(decimals: 0)} units are up-to-date."
                        : $"{count.ToMetric(decimals: 0)} units in version {version} are behind and will be re-indexed.";
                    <div class="progress-bar @color" title="@title" role="progressbar" style="width: @(percentage)" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                }
            </div>
        }
    </div>

</div>
